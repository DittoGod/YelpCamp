<% include ../partials/header %>

<div class="row">
  <h1 style="text-align: center;">Edit <%= campground.name %></h1>
  <div style="width: 30%; margin: 30px auto;">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>"
          placeholder="name">
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>"
          placeholder="image url">
      </div>
      <label for="cost">Price</label>
      <div class="input-group">
        <span class="input-group-addon">Â£</span>
        <input style="text-align: right;" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="campground[cost]"
          value="<%= campground.cost %>">
      </div>
      <br>
      <label for="description">Description</label>
      <div class="form-group">
        <textarea class="md-textarea form-control" name="campground[description]" cols="30" rows="10"><%= campground.description %></textarea>
      </div>
      <div class="form-group">
        <label for="Location">Location</label>
        <input class="form-control" type="text" name="campground[location]" id="location"
          value="<%= campground.location %>">
      </div>
      <div class="form-group">
        <button class="btn btn-lrg btn-primary btn-block" type="submit"> submit </button>
      </div>
    </form>
    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
  </div>
</div>

<% include ../partials/footer %>